{
    "name": "Squirrel",
    "version": "0.0.1",
    "license": "MIT",
    "homepage": "https://github.com/cdot/Squirrel",
    "repository": {
        "type": "git",
        "url": "https://github.com/cdot/Squirrel.git"
    },
    "scripts": {
        "doc": "jsdoc --verbose -c doc/config.json -r -p -d doc js",
        "lint": "eslint js -f unix",
        "test": "for f in `find . -name '*.ut'`; do node $f; done",
        "tx": "node bin/checkStrings.js",
        "update": "ncu -u ",
        "server": "node js/web_server.js --user=x --pass=x --debug --log",
        "release": "node build/release.js"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": "latest"
        },
        "env": {
            "shared-node-browser": true,
            "jquery": true,
            "es2021": true
        },
        "globals": {
            "define": false,
            "ArrayBuffer": false,
            "Buffer": false,
            "Uint8Array": false,
            "Uint8ClampedArray": false,
            "Int8Array": false,
            "Int16Array": false,
            "Uint16Array": false,
            "Int32Array": false,
            "Uint32Array": false,
            "Float32Array": false,
            "Float64Array": false,
            "XMLHttpRequest": true,
            "WeakMap": false,
            "require": false,
            "module": false,
            "Promise": false,
            "requirejs": true,
            "localStorage": true
        },
        "rules": {
            "camelcase": 0,
            "curly": 0,
            "dot-notation": 1,
            "new-cap": 0,
            "no-alert": 0,
            "no-console": 0,
            "no-debugger": 0,
            "no-eval": 0,
            "no-fallthrough": 0,
            "no-loop-func": 1,
            "no-mixed-spaces-and-tabs": 0,
            "no-new": 0,
            "no-redeclare": [
                "error",
                {
                    "builtinGlobals": true
                }
            ],
            "no-trailing-spaces": 0,
            "no-underscore-dangle": 0,
            "no-unused-vars": 0,
            "no-useless-escape": 1,
            "no-use-before-define": 0,
            "quotes": 0,
            "strict": 0
        }
    },
    "devDependencies": {
        "axios": "^0.27.2",
        "btoa": "^1.2.1",
        "c8": "^7.11.3",
        "canvas": "^2.9.3",
        "chai": "^4.3.6",
        "chai-http": "*",
        "clean-css": "^5.3.1",
        "cookies": "^0.8.0",
        "eslint": "^8.20.0",
        "express": "^4.18.1",
        "express-basic-auth": "^1.2.1",
        "html-minifier": "^4.0.0",
        "jsdoc": "^3.6.10",
        "jsdom": "^20.0.0",
        "mocha": "^10.0.0",
        "node-getopt": "^0.3.2",
        "npm-check": "^6.0.1",
        "npm-check-updates": "^15.3.4",
        "readline-sync": "^1.4.10",
        "request": "^2.65.0",
        "sync-request": "^6.1.0",
        "uglify-js": "^3.16.2",
        "url-parse": "^1.5.10",
        "webdav-server": "^2.6.2",
        "xhr2": "^0.2.1"
    },
    "dependencies": {
        "@benmajor/jquery-touch-events": "^2.0.3",
        "@wikimedia/jquery.i18n": "^1.0.7",
        "clipboard": "^2.0.11",
        "jquery": "^3.6.0",
        "jquery-ui-dist": "^1.13.1",
        "jquery.cookie": "^1.4.1",
        "requirejs": "^2.3.6",
        "ui-contextmenu": "^1.18.1"
    }
}
