{
    "name": "Squirrel",
    "version": "0.0.1",
    "eslintConfig": {
        "env": {
            "browser": true,
            "jquery": true
        },
        "ecmaFeatures": {
            "blockBindings": true
        },
        "globals": {
            "assert": true,
            "AbstractStore": true,
            "GoogleDriveStore": true,
            "DropboxStore": true,
            "LocalStorageStore": true,
            "EncryptedStore": true,
            "Utils": true,
            "Hoard": true,
            "Aes": true,
            "TX": true,
            "Dropbox": true,
            "gapi" : true,
            "ZeroClipboard": true,
            "DEBUG": true,
            "SQUIRREL_STORE": true,
            "Squirrel": true
        },
        "rules": {
            "no-underscore-dangle": 0,
            "curly": 0,
            "camelcase": 0,
            "no-unused-vars": 1,
            "no-console": 0,
            "no-debugger": 1,
            "no-alert": 1,
            "no-new" : 0,
            "new-cap" : 0,
            "dot-notation" : 1,
            "no-trailing-spaces" : 0,
            "no-use-before-define": "3 nofunc"
        }
    }
}
